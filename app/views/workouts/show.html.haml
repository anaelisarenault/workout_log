#workout
  %p= @workout.date
  %p= @workout.workout
  %p= @workout.mood
  %p= @workout.length

#exercises
  %h2 Treinos
  = render @workout.exercises

  %h3 Adicionar um treino
  = render "exercises/form"

= link_to "Voltar", root_path
= link_to "Editar", edit_workout_path(@workout)
= link_to "Deletar", workout_path(@workout), method: :delete, data: { confirm: "Tem certeza de que deseja deletar?" }


